<h1>All Posts</h1>
<% @post.each do |post| %>
	<div class="media">
		<div class="media-body">
			<h4 class="media-heading">
				<%= link_to post.title, post %>
			</h4>
			<small>
				submitted <%= time_ago_in_world(post.created_at) %> ago by <%= user.name %></br>
				<%= post.comments.count %> Comments
		</div>
	</div>
<% end %>
